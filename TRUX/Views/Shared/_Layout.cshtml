<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/Content/images/trux-icon.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title >TruX </title>
    <!--Original styles-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/sass")
    @Styles.Render("~/Content/font")

    <!--Added additional styles for new theme-->
    @Styles.Render("~/Content/assets/css")
    @Styles.Render("~/Content/assets/sass")
    @Styles.Render("~/Content/assets/fonts")
    @Scripts.Render("~/Scripts/angular.js")

    <!--Scripts-->
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/custom.css")
    @Styles.Render("~/Content/images/trux-icon.png")

</head>
<body ng-app="truxApp">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <p id="navbar-text">
                    @Html.ActionLink("TruX", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </p>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Info", "Info", "Home")</li>
                    <li>@Html.ActionLink("Create", "Create", "Home")</li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -  TruX Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/Scripts/angular-animate.js")

    @RenderSection("scripts", required: false)
</body>
</html>
